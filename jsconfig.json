{
    "module": "es6",
    "moduleResolution": "node",
    "compilerOptions": {
      "resolveJsonModule": true,
      "module": "commonjs",
      "target": "es6",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "baseUrl": ".",
